{
  "builds": [
    {
      "src": "frontend/crm/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/crm/index.html"
    },
    {
      "src": "/login/(.*)",
      "dest": "/frontend/crm/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/crm/$1"
    }
  ],
  "buildCommand": "cd frontend/crm && npm ci && npm run build",
  "outputDirectory": "frontend/crm/dist"
}
