{
  "name": "penny-debt-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Penny & Debt CRM - Modern Fintech Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:website\" \"npm run dev:crm\"",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:website": "npm run dev --workspace=apps/website",
    "dev:crm": "npm run dev --workspace=apps/crm",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    
    "build": "npm run build:backend && npm run build:website && npm run build:crm",
    "build:backend": "npm run build --workspace=apps/backend",
    "build:website": "npm run build --workspace=apps/website",
    "build:crm": "npm run build --workspace=apps/crm",
    
    "install:all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
