{
  "env": {
    "browser": true,
    "es2021": true,
    "node": false
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "globals": {
    "Intl": "readonly",
    "SpreadsheetApp": "readonly",
    "ContentService": "readonly"
  },
  "ignorePatterns": ["google-apps-script.js", "structure.txt"],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "react/prop-types": "off",
    "no-console": "off"
  }
}
