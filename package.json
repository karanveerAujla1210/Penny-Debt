{
  "name": "penny-debt",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "frontend/*",
      "backend"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-scripts",
      "**/typescript"
    ]
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "concurrently \"npm run dev:website\" \"npm run dev:crm\"",
    "dev:website": "cd frontend/website && npm run dev",
    "dev:crm": "cd frontend/crm && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm run build:website && npm run build:crm",
    "build:website": "cd frontend/website && npm run build",
    "build:crm": "cd frontend/crm && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "concurrently \"cd frontend/website && npm test\" \"cd frontend/crm && npm test\"",
    "test:backend": "cd backend && npm test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.2",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-pwa": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
