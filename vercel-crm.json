{
  "builds": [
    {
      "src": "crm-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/crm-frontend/index.html"
    },
    {
      "src": "/crm",
      "dest": "/crm-frontend/index.html"
    },
    {
      "src": "/test-login",
      "dest": "/crm-frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/crm-frontend/$1"
    }
  ],
  "buildCommand": "cd crm-frontend && npm ci && npm run build",
  "outputDirectory": "crm-frontend/build"
}