{
  "builds": [
    { "src": "frontend/website/package.json", "use": "@vercel/static-build" },
    { "src": "frontend/crm/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/crm/(.*)",
      "dest": "/crm/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
