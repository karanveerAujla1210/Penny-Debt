{
  "builds": [
    {
      "src": "frontend/website/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public/website" }
    },
    {
      "src": "frontend/crm/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public/crm" }
    }
  ],
  "routes": [
    { "src": "/crm/(.*)", "dest": "/crm/index.html" },
    { "src": "/(.*)", "dest": "/website/index.html" }
  ]
}
