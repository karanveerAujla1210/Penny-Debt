{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && npm run build:website",
  "outputDirectory": "apps/website/dist",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  },
  "functions": {
    "apps/website/dist/**": {
      "maxDuration": 30
    }
  }
}
