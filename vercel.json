{
  "buildCommand": "cd crm-frontend && npm install && npm run build",
  "outputDirectory": "crm-frontend/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://penny-debt-crm.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}